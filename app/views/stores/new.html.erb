<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://source.unsplash.com/9UD0JHnWyVE/1600x900);">
    <div class="banner-btn">
      <%= link_to "Back to Home", stores_path, class: "btn btn-ghost" %>
    </div>
      <div class="container">
        <h1>Add A Store</h1>
      </div>
      <div class="form">
        <%= simple_form_for @store do |f| %>
          <%= f.input :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit 'Add', class: 'btn btn-ghost-add'%>
        <% end %>
      </div>
</div>
